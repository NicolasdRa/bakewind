SUBSCRIPTION_SUCCESS_URL=http://localhost:3001/subscription-success
SUBSCRIPTION_CANCEL_URL=http://localhost:3001/pricing

# Security
BCRYPT_ROUNDS=12
SESSION_CLEANUP_INTERVAL_HOURS=24
EXPIRED_SESSION_CLEANUP_DAYS=30
COOKIE_SECRET=your-super-secret-cookie-key-change-in-production

