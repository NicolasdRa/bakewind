# Development Environment Variables
# Copy this file to .env to configure your local environment

# API Configuration
VITE_API_URL=http://localhost:5000
VITE_API_TIMEOUT=30000

# Mock Data Configuration
# Set to 'true' to use mock data in development, 'false' to use real API
VITE_USE_MOCK_DATA=true

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false

# External Services
VITE_POS_INTEGRATION_URL=
VITE_PAYMENT_GATEWAY_URL=

# Storage
VITE_STORAGE_PREFIX=bakewind_

# Session Configuration
# Generate a secure session secret with: openssl rand -base64 32
# This must be at least 32 characters long for security
SESSION_SECRET=your-super-secret-session-key-at-least-32-chars